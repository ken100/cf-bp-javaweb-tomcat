#!/usr/bin/env ruby
 
# sync output
$stdout.sync = true
$stderr.sync = true
 
build_dir = ARGV[0]
#if Dir.exists?("#{build_dir}/WEB-INF") and File.exists?("#{build_dir}/WEB-INF/web.xml")
if File.exists?("#{build_dir}/solr.war")
  puts 'Ok, it is a solr application.'
  exit 0
end
 
puts 'Sorry, it is not a solr application.'
exit 1
